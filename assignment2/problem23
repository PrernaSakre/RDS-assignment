b<-diag(c(1,2,-2))
b

#     [,1] [,2] [,3]
#[1,]    1    0    0
#[2,]    0    2    0
#[3,]    0    0   -2

inv_b<-solve(b)
print(inv_b)

#     [,1] [,2] [,3]
#[1,]    1  0.0  0.0
#[2,]    0  0.5  0.0
#[3,]    0  0.0 -0.5

c<-diag(x=3)
c

#     [,1] [,2] [,3]
#[1,]    1    0    0
#[2,]    0    1    0
#[3,]    0    0    1

d<-inv_b%*%b-c
d

#     [,1] [,2] [,3]
#[1,]    0    0    0
#[2,]    0    0    0
#[3,]    0    0    0

